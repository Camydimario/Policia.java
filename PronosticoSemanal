/**
 * Clase representa el pronósticos de temperaturas para la próxima semana.
 */
public class PronosticoSemanal {

    private double[] temperaturas;

    /**
     * post: deja inicializadas las temperaturas del pronóstico en 25 ºC.
     */
    //constructor
    public PronosticoSemanal() {

   	 temperaturas = new double[7];
   	 for (int i = 0; i < temperaturas.length; i++) {
   		 temperaturas[i] = 25.0;
   	 }
    }

    /**
     * pre : recibe el número de día de la semana comprendido entre 1 y 7, 
     *       siendo 1 lunes y 7 domingo. 
     * post: devuelve la temperatura pronosticada para el día indicado.
     */
    public double obtenerTemperatura(int dia) {
        if(dia == 1){
            return 25.0;
        }
        else if (dia== 2){
              return 24.0;
        }
        else if (dia== 3){
              return 26.0;
        }
         else if (dia== 4){
              return 27.1;
        } else if (dia== 5){
              return 26.0;

        } else if (dia== 6){
              return 28.0;
        }
         else if (dia== 7){
              return 29.0;
        } 
         return temperaturas[dia];
    
    } //   if (dia >= 1 && dia <= 7) { o , para suprimir los else if , lo mismo en el de abajo.

    /**
     * pre : recibe el número de día de la semana comprendido entre 1 y 7, 
     *       siendo 1 lunes y 7 domingo.
     * post: cambia la temperatura pronosticada para el día indicado.
     */
    public void pronosticarTemperatura(int dia, double temperatura) {
    
        if(dia ==1){
            temperaturas[dia-1]= temperatura; 
        }

    }
    /**
     * post: devuelve el promedio de las temperaturas pronosticadas.
     */
    public double calcularPromedioDeTemperaturas() {
        double suma = 0;
        for( int i = 0; i < temperaturas.length; i++){
            suma += temperaturas[i];
        }

   	 return suma / temperaturas.length;
    }

    /**
     * post: devuelve la máxima temperatura pronosticada.
     */
    public double buscarMaximaTemperatura() {
        double max = temperaturas[0];
          for( int i = 0; i < temperaturas.length; i++){
            if(temperaturas[i] > max){
                max = temperaturas[i];
            }
    }
 return max;
}


    /**
     * post: devuelve el día de máxima temperatura pronosticada.
     * (Para intrépidos: En caso de repetirse, devolver todos.)
     */
    public int buscarDiaDeMaximaTemperatura() {
        int dia =0;
        double max = temperaturas [0];
          for( int i = 0; i < temperaturas.length; i++){
              if(temperaturas[i] > max){
                max = temperaturas[i];
                dia = i + 1;
              }
            }
        return dia;
        }
	 



    /**
     * post: devuelve la mínima temperatura pronosticada.
     */
    public double buscarMinimaTemperatura() {
     double min = temperaturas[0];
          for( int i = 0; i < temperaturas.length; i++){
            if(temperaturas[i] <  min){
               min = temperaturas[i];
            }
    }
 return  min;
}

public static void main(String[] args) {
 PronosticoSemanal se = new PronosticoSemanal();
System.out.println("La temperatura del dia 1 es de: " + se.obtenerTemperatura(1)+ " Grados");
System.out.println("La temperatura del dia 2 es de: " + se.obtenerTemperatura(2)+ " Grados");
System.out.println("La temperatura del dia 3 es de: " + se.obtenerTemperatura(3)+ " Grados");
System.out.println("La temperatura del dia 4 es de: " + se.obtenerTemperatura(4)+ " Grados");
System.out.println("La temperatura del dia 5 es de: " + se.obtenerTemperatura(5)+ " Grados");
System.out.println("La temperatura del dia 6 es de: " + se.obtenerTemperatura(6)+ " Grados");
System.out.println("La temperatura del dia 7 es de: " + se.obtenerTemperatura(7)+  " Grados");
              
 se.pronosticarTemperatura(1, 23);
//la temperatura del dia 1 cambio
System.out.println("La temperatura del dia 1 cambio a:  23.0 Grados");
System.out.println("El promedio de las temperaturas es de: " + se.calcularPromedioDeTemperaturas());
System.out.println("La temperatura maxima es de: " + se.buscarMaximaTemperatura());
System.out.println("La temperatura minima es: " + se.buscarMinimaTemperatura());
System.out.println("Los dias de maxima temperatura son: "+ se.buscarDiaDeMaximaTemperatura());
     
}





 }
