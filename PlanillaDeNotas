/*
 * Crear con la cantidad de alumnos
* Cargar y recuperar la nota de un alumno por su número de orden
* Buscar la nota máxima
* Buscar la nota mínima
* Calcular la nota promedio
* Contar los alumnos aprobados
 * 
 * 
 */

public class PlanillaDeNotas {

private int Aprobados;
private int alumnos;
private int recuperar;

public PlanillaDeNotas (int cantidadAlumnos) {
      if(cantidadAlumnos > 1 && cantidadAlumnos < 25){
        alumnos = cantidadAlumnos;

        //this.Aprobados=0;
//this.alumnos = alumnos;
      }
}

/*
 * pre: se crea con la cantidad de alumnos 
 * post: la cantidad de alumnos van desde 0 a 25
 */
public int CantidadAlumnos () {
    return this.alumnos;
}
    

/*
 * pre: se Cargan y se recupera las notas de un alumno por su numero de orden 
 * post: los alumnos que tengan mayor a 4 en la nota aprueban */



 public void cargarNotas(int numeroOrden, int  notaAlumno ) {
    if(numeroOrden > 0 && numeroOrden <=20){
         if(notaAlumno > 4 ){
            this.Aprobados++;
         }
         if (notaAlumno < 4){
            this.Aprobados--;
            this.recuperar++;
         }
        else {
            this.Aprobados--;
         

        }
    
    }
}
public int recuperar( int [] notas) {
    int recuperar = 0;
      for(int i = 0; i < notas.length ; i ++) {
        if(notas[i] <4  ) {
           recuperar++;
        }
}
return recuperar;
}
 

 /*
  * post: se busca la nota minima 
  */
  public int buscarNotaMinima (int [] notas) {
    int minimo = notas[0];
     for(int i = 0; i < notas.length ; i ++) {
        if(notas [i] < minimo) {
            minimo = notas[i];
        }
  }

return minimo;

}

 /*
  * post: se busca la nota maxima
  */
  public int buscarNotaMaxima (int [] notas) {
    int maximo = notas[0];
     for(int i = 0; i < notas.length ; i ++) {
        if(notas [i] > maximo) {
            maximo = notas[i];
        }
  }

return maximo;

}

 /*
  * post: calcula la nota promedio
  */

  public double notaPromedio ( int [] notas){
    double suma = 0;
     for(int i = 0; i < notas.length ; i ++) {
        suma += notas[i];
  }
return suma/ notas.length;
}

/*
 * post: devuelve la de Cuenta los alumnos aprobados
 * 
 */


public int ContarlumnosAprobados (int [] nota) {
    int aprobados = 0;
      for(int i = 0; i < nota.length ; i ++) {
        if(nota[i] >= 4){
              aprobados++;
        }
}
return aprobados;

}


public static void main(String[] args) {
    PlanillaDeNotas plani = new PlanillaDeNotas(20);
    int [] notas = {7,4,6,7,1,3, 10,2,3,7,8,2,1,9};
System.out.println(notas);
plani.cargarNotas(10, 4);
plani.cargarNotas(10, 4);
plani.cargarNotas(10, 4);

System.out.println("Cantidad de Alumnos: " + plani.CantidadAlumnos());
System.out.println("Nota minima:  "+ plani.buscarNotaMinima(notas));
System.out.println("Nota maxima: "+ plani.buscarNotaMaxima(notas));
System.out.println("promedio de alumnos: " + plani.notaPromedio(notas));
System.out.println("Alumnos aprobados: " + plani.ContarlumnosAprobados(notas));
System.out.println("Alumnos recuperados: " + plani.recuperar(notas));

}





}
